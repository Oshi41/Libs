<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfControls"
                    xmlns:controls="clr-namespace:WpfControls.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfControls;component/Themes/PathBox.xaml"/>
        <ResourceDictionary Source="/WpfControls;component/Themes/NumericInput.xaml"/>
        <ResourceDictionary Source="/WpfControls;component/Themes/SearchLine.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{x:Type controls:PathBox}" 
           TargetType="controls:PathBox"
           BasedOn="{StaticResource PathBoxStyle}"/>

    <!--x:Key="{x:Type controls:SearchTextLine}"-->
    <Style TargetType="{x:Type controls:SearchTextLine}"
           BasedOn="{StaticResource SearchTextLineStyle}"/>

    <Style x:Key="{x:Type controls:NumericInput}" 
           TargetType="controls:NumericInput"
           BasedOn="{StaticResource NumericInputStyle}"/>
</ResourceDictionary>
